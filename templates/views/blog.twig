{% verbatim %}
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <h1 class="black" style="margin-top:150px;">Posts</h1>
        </div>
    </div>

    <div class="row" ng-repeat="post in posts">
        <div class="col-xs-8">
            <img ng-src="{{post.image.url}}" class="img-responsive"/>
            <h3 class="black">{{post.title}}</h3>
            <div ng-bind-html="post.content.brief"></div>
        </div>
    </div>
</div>
{% endverbatim %}
