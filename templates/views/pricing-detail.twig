<section id="rendering" class="text-center">
  <global-modal width="80%" height="{{videoHeight}}" show="showRendering" video="true">
    <div class="row">
      <div class="col text-center">
        <h2 class="forest">3D Rendering</h2>
      </div>
    </div>
      <div class="embed-responsive embed-responsive-16by9">
          <video width="400" id="CS-video" controls>
              <source src="img/videos/3d-rendering-video-comp.mp4" type="video/mp4">
                  Your browser does not support HTML5 video.
          </video>
      </div>
      <button ng-click="brandingContact()" class="btn btn-outline margin-top">Contact to get started</button>
  </global-modal>

