{% verbatim %}

  <div class="container">

	<div class="row">
		<div class="col">
			<ul class="list-inline text-center">
					<li class="list-inline-item"><a ui-sref="pricing.detail({level: 'all'})" class="btn btn-outline" ng-class="{active: level === 'all'}">All</a></li>
					<li class="list-inline-item"><a ui-sref="pricing.detail({level: 'personal'})" class="btn btn-outline" ng-class="{active: level === 'personal'}">Personal</a></li>
					<li class="list-inline-item"><a ui-sref="pricing.detail({level: 'professional'})" class="btn btn-outline" ng-class="{active: level === 'professional'}">Professional</a></li>
				</ul>
		</div>
	</div>

  	<div class="row">
  		<div ng-repeat="service in services track by $index" class="col-sm-6 col-md-4 pricing-box margin-top2x" ng-class="{'offset-md-1' : $index % 2 === 0, 'offset-md-2' : $index % 2 !== 0}">
        <a ng-click="showSlide(service.slug)">
          <h3 class="forest text-center">{{service.name}}</h3>
  				<img ng-src="{{service.img}}" ng-class="{hide: selectedService === service.slug}" class="img-fluid">
        </a>

        <div class="pricing-slide" ng-class="{show: selectedService === service.slug}">
          <h3 ng-click="close()" class="close">X</h3>
          <p class="desc">{{service.desc}}</p>
          <p>{{service.price}}</p>
          <button ng-click="contactUs()" ng-if="service.button.type === 'contact'" class="btn btn-outline white">{{service.button.text}}</button>

          <button ng-click="toggleBook()" ng-if="service.button.link === 'viewBooklet'" class="btn btn-outline white">{{service.button.text}}</button>

          <button ng-click="toggleRendering()" ng-if="service.button.link === 'viewRendering'" class="btn btn-outline white">{{service.button.text}}</button>

          <a ng-if="service.button.type === 'link'" ui-sref="{{service.button.link}}" class="btn btn-outline white">{{service.button.text}}</a>
        </div>
  		</div>
  	</div>
  </div>
</section>

