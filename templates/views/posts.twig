{% verbatim %}

<page-banner bg-image="../../img/bgs/blogheader.jpg"></page-banner>

<section id="posts" class="padded-vert-2x" ngCloak>
    <div class="hero-text">
      <h1>Blog</h1>
      <h3>posts<span class="end-border">  _______</span></h3>
    </div>

    <div class="container" id="posts" style="margin-top:150px;">
        <div class="row">
            <div ng-repeat="post in posts track by $index" class="col col-sm-4 text-center padded-bottom2x">
                <!-- <div class="clearfix" ng-if="$index % 3 === 0"></div> -->
                <!-- <div class="col col-sm-4 text-center padded-bottom2x"> -->
                    <a ng-href="/post/{{post.slug}}"><img ng-src="{{post.image.url}}" class="img-responsive"/>
                    <h3 class="forest">{{post.title}}</h3></a>
                    <h5 class="forest">{{post.publishedDate | date : 'mediumDate'}}</h5>
                <!-- </div> -->
            </div>
        </div>
    </div>

</section>

<section class="cta">
    <div class="container">
        <div class="row">
            <div class="col text-center">
                <h3>Simplicity is the ultimate sophistication. - Leonardo da Vinci</h3>
            </div>
        </div>
    </div>
</section>
{% endverbatim %}
