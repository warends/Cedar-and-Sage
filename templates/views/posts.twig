{% verbatim %}
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <h1 class="forest" style="margin-top:150px;">Posts</h1>
        </div>
    </div>

    <div class="row padded-bottom" ng-repeat="post in posts">
        <div class="col-xs-4 text-center">
            <a ng-href="/post/{{post.slug}}"><img ng-src="{{post.image.url}}" class="img-responsive"/></a>
            <h3 class="forest">{{post.title}}</h3>
            <h6 class="forest">{{post.publishedDate | date : 'medium'}}</h6>
        </div>
    </div>
</div>
{% endverbatim %}
