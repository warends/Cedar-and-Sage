{% verbatim %}
<section id="home-banner">
  <div class="separator"></div>
  <div class="separator reverse"></div>
</section>


<section id="welcome">
  <div class="hero-text vertical left">
    <h1>hello</h1>
    <h3>Our Studio<span class="end-border">  _______</span></h3>
  </div>
  <div class="container sm">
    <div class="row">
      <div class="col-sm-8 welcome-box" in-view view-obj="welcome" ng-class="{active:welcome.visible}">
        <div class="" target-height>
            <svg id="square-svg" data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 622 522">
              <rect id="square" x="3" y="3" width="616" height="516" fill="none" stroke="#9fa8a1" stroke-width="6"/>
            </svg>
            <div class="welcome-text">
                <img class="img-responsive hb-icon" src="img/house-pen-icon.png"/>
                <h3 class="forest padded-vertical">Welcome</h3>
                <p>Our interior design studio specializes in big ideas.  From online design, space planning and branding, to residential and custom furniture design, our innovation is a unique personalization.</p>
                <a class="btn btn-outline" href="#" ui-sref="e-design">E-Design</a>
                <a class="btn btn-outline" href="#" ui-sref="services.detail({slug: 'interior-design'})">More Services</a>
            </div>
        </div>
      </div>
      <div class="col-sm-8 col-sm-offset-5 welcome-img" >
        <img class="img-responsive" src="img/cocktail-table.jpg" alt="Cocktail Table" box-height/>
      </div>
    </div>
  </div>
</section>


<section id="e-design" ng-scroll-reveal="options">
  <div class="hero-text vertical right">
    <h1>e-design</h1>
    <h3>Projects<span class="end-border">  _______</span></h3>
  </div>
  <div class="container sm">
    <div class="row">
      <div class="col-sm-6 col-md-5 col-md-offset-1 left">
        <img class="img-responsive" src="img/AMSBERRY-moodboard.png" />
      </div>
      <div class="col-sm-6 col-md-5 right">
        <div class="dark-grey box text-center">
          <div class="text-box">
            <h3>What is e-design?</h3>
            <h5 class="forest padded-vertical">It is our online virtual designer program.  The entire process is completed online.  We get your input about your style and space to then transform that into a fresh design.</h5>
            <button class="btn btn-outline" ng-click="toggleVideo()">Watch Now</button>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6 col-md-5 col-md-offset-1 left">
        <div class="grey box text-center">
          <div class="text-box">
              <h3 class="white">What we need from you:</h3>
              <p>Photos of your space</p>
              <p>Dimensions</p>
              <p>Inspiration Images</p>
              <p>Questionnaire</p>
              <h3 class="white padded-top">What you get from us:</h3>
              <p>Mood Board</p>
              <p>Personalized Floor Plan</p>
              <p>Purchasing List</p>
              <a class="btn btn-outline margin-top" ui-sref="e-design">Learn More</a>
          </div>
        </div>
      </div>
      <div class="col-sm-6 col-md-5 right">
        <img class="img-responsive" src="img/Amsberry-Floor-Plan.png" />
      </div>
    </div>
  </div>
</section>
<global-modal width="80%" show="videoShow">
    <div class="video-responsive">
        <iframe width="560" height="315" src="https://www.youtube.com/embed/kdh08cVW8Os?showinfo=0" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
    </div>
</global-modal>

<section id="services">
    <div class="divider text-center"></div>
  <div class="hero-text">
    <h1>services</h1>
    <h3>What We Do<span class="end-border">  _______</span></h3>
  </div>
  <div class="container sm">
    <div class="row">
      <div ng-repeat="service in services">
          <div class="clearfix" ng-if="$index % 2 == 0 && screenW <= 992"></div>
          <div class="col-sm-6 col-md-3 service">
              <a ui-sref="services.detail({slug: service.slug})">
              <div class="hex-box">
                  <div class="hexagon-grey"></div>
                  <div class="hexagon-black">
                        <img class="img-responsive {{service.title}}" ng-src="{{service.logo}}" ng-class="service.slug"/>
                  </div>
              </div>
              </a>

            <h3 class="forest padded-bottom">{{service.name}}</h3>
            <p>{{service.desc}}</p>
          </div>
      </div>
    </div>
  </div>
</section>

<section class="cta">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 text-center">
        <h3>Assembling designs. Emulating your identity. Amplifying your style.</h3>
      </div>
    </div>
  </div>
</section>
{% endverbatim %}
